@model IEnumerable<demo.Models.ThietBi>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
}
<div class="container">
    <div class="row">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/Assets/images/2_Dienthoai/iphone12_den.jpg" alt="First slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Assets/images/2_Dienthoai/iphone12_trang.jpg" alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/Assets/images/2_Dienthoai/iphone12_xanh.png" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="row">
        <img src="~/Assets/images/padddddd.png" />
    </div>
    <div class="card-group">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-sm-3">
                    <div class="card h-100">
                        <a href="@Url.Action("Details", "Home", new {ID=@item.MATB })" class="img-wrap">
                            <img src="~/Assets/images/@item.HINHANH" style="width:100%;height:220px" />

                        </a>

                        <div class="card-body">
                            <h4 class="card-title">@item.MATB</h4>
                            <div class="card-text">
                                <h5>@item.TENTB </h5>
                                <h3 style="color:red">@item.GIATHANH</h3>
                            </div>

                        </div>
                        <a href="@Url.Action("AddCart", "ShoppingCart", new {ID = @item.MATB })" onclick="return Submit()" class="img-wrap">
                            <img src="~/Assets/images/addtocart.jpg" style="width:50px;height:50px" />
                        </a>
                        <div class="card-footer">
                            <small class="text-muted"> Last update 3 mins ago</small>
                        </div>
                    </div>
                </div>
            }
            @*Trang   @Html.PagedListPager(Model, page => Url.Action("Index", new {page}))*@
        </div>
    </div>
</div>
